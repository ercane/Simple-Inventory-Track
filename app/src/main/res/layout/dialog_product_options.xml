<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/zxing_transparent"
              android:orientation="vertical"
              android:padding="10dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_weight="1"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">
        <LinearLayout android:id="@+id/btnView"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="?attr/selectableItemBackground"
                      android:clickable="true"
                      android:gravity="center"
                      android:orientation="horizontal"
                      android:padding="8dp">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:tag="@string/text_bold"
                      android:text="@string/msg_settings_product_view"
                      android:textAlignment="center"
                      android:textColor="@android:color/black"
                      android:textSize="@dimen/large_size"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_weight="1"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">
        <LinearLayout android:id="@+id/btnEdit"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="?attr/selectableItemBackground"
                      android:clickable="true"
                      android:gravity="center"
                      android:orientation="horizontal"
                      android:padding="8dp">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:tag="@string/text_bold"
                      android:text="@string/msg_settings_product_edit"
                      android:textAlignment="center"
                      android:textColor="@android:color/black"
                      android:textSize="@dimen/large_size"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_weight="1"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">
        <LinearLayout android:id="@+id/btnDelete"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="?attr/selectableItemBackground"
                      android:clickable="true"
                      android:gravity="center"
                      android:orientation="horizontal"
                      android:padding="8dp">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:tag="@string/text_bold"
                      android:text="@string/msg_settings_product_delete"
                      android:textAlignment="center"
                      android:textColor="@android:color/black"
                      android:textSize="@dimen/large_size"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

